<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>by.gdev</groupId>
    <artifactId>starter</artifactId>
    <version>1.11</version>
  </parent>
  <groupId>by.gdev</groupId>
  <artifactId>starter-core</artifactId>
  <version>1.11</version>
  <dependencies>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-text</artifactId>
      <version>1.11.0</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <dependency>
      <groupId>com.beust</groupId>
      <artifactId>jcommander</artifactId>
      <version>1.81</version>
    </dependency>
    <dependency>
      <groupId>by.gdev</groupId>
      <artifactId>desktop-common-util</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>by.gdev</groupId>
      <artifactId>http-download</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
      <version>4.5.10</version>
    </dependency>
    <dependency>
      <groupId>com.google.inject</groupId>
      <artifactId>guice</artifactId>
      <version>5.0.1</version>
    </dependency>
    <dependency>
      <groupId>org.mock-server</groupId>
      <artifactId>mockserver-netty-no-dependencies</artifactId>
      <version>5.14.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <manifestEntries>
                    <Main-Class>by.gdev.Main</Main-Class>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <createDependencyReducedPom>false</createDependencyReducedPom>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.mock-server</groupId>
        <artifactId>mockserver-maven-plugin</artifactId>
        <version>5.14.0</version>
        <executions>
          <execution>
            <id>process-test-classes</id>
            <phase>process-test-classes</phase>
            <goals>
              <goal>runForked</goal>
            </goals>
          </execution>
          <execution>
            <id>verify</id>
            <phase>verify</phase>
            <goals>
              <goal>stopForked</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <serverPort>1080</serverPort>
          <logLevel>DEBUG</logLevel>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <artifactId>launch4j-maven-plugin</artifactId>
        <version>1.7.18</version>
        <executions>
          <execution>
            <id>l4j-gui</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <headerType>gui</headerType>
              <icon>fav48.ico</icon>
              <outfile>target/${project.artifactId}-${project.version}.exe</outfile>
              <jar>target/${project.artifactId}-${project.version}.jar</jar>
              <errTitle>Java version</errTitle>
              <downloadUrl>http://java-for-minecraft.com/</downloadUrl>
              <jre>
                <minVersion>1.8.0</minVersion>
              </jre>
              <versionInfo>
                <fileVersion>${project.version}.0.0</fileVersion>
                <copyright>TLauncher Inc.</copyright>
                <fileDescription>TLauncher</fileDescription>
                <txtFileVersion>${project.version}</txtFileVersion>
                <productVersion>${project.version}.0.0</productVersion>
                <txtProductVersion>${project.version}.0.0</txtProductVersion>
                <productName>TLauncher</productName>
                <companyName>TLauncher Inc.</companyName>
                <internalName>TLauncher</internalName>
                <originalFilename>TLauncher.exe</originalFilename>
                <trademarks></trademarks>
                <language></language>
              </versionInfo>
              <messages>
                <jreVersionErr>The launcher can't start! You
									need to install
									Java (recommended 8) click
									OK for more information. The minimum
									version</jreVersionErr>
              </messages>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
